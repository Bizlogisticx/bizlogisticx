<%= form_for(@user) do |f| %>
  

  <% if !@user.id || session[:email] == @user.email %>
  <% if !@user.id %>
  <div class="field">
    <%= f.label 'First Name' %><br />
    <%= f.text_field :first %>
  </div>
  <div class="field">
    <%= f.label 'Last Name' %><br />
    <%= f.text_field :last %>
  </div>
  <% else %>
    <%= f.label "Name" %><br />
    <%= @user.first %>
    <%= @user.last %>
  <% end %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <% else %>
    <%= f.label "Name" %><br />
    <%= @user.first %>
    <%= @user.last %>
  <% end %>

  <% if admin? %>
  <div class="field">
    <%= f.label :admin_status %><br />
    <%= f.text_field :admin %>
  </div>
  <% end %>

  <% if !@user.id || session[:email] == @user.email %>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <% end %>

  <% if !@user.id %>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <% else %>
    <div class="actions">
    <%= f.submit "Edit" %>
  </div>
  <% end %>
<% end %>
